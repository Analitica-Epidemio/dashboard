# Configuración de ejemplo para el Sistema de Epidemiología Moderna
# Copia este archivo a .env y configura los valores apropiados

# =============================================================================
# CONFIGURACIÓN DE ENTORNO
# =============================================================================
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# CONFIGURACIÓN DE BASE DE DATOS
# =============================================================================
# ⚠️  IMPORTANTE: Cambiar estas credenciales en producción
# Para desarrollo local con PostgreSQL
DATABASE_URL=postgresql+asyncpg://epidemiologia_user:CAMBIAR_PASSWORD_FUERTE@localhost:5433/epidemiologia_db
DB_NAME=epidemiologia_db
DB_USER=epidemiologia_user
DB_PASSWORD=CAMBIAR_PASSWORD_FUERTE
DB_PORT=5433

# =============================================================================
# CONFIGURACIÓN DE SEGURIDAD - ¡CRÍTICO PARA PRODUCCIÓN!
# =============================================================================
# PASO 1: Genera una clave secreta ÚNICA con el siguiente comando:
#   openssl rand -hex 32
#
# PASO 2: Copia el resultado y pégalo abajo
# PASO 3: NUNCA compartas esta clave o la incluyas en git
#
# ⚠️  ADVERTENCIA: Esta clave protege TODOS los tokens JWT y datos médicos
# ⚠️  Si esta clave se compromete, TODA la seguridad del sistema falla
SECRET_KEY=CAMBIAR_ESTO_GENERAR_CON_OPENSSL_RAND_HEX_32

# Hosts permitidos (separados por coma)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# =============================================================================
# CONFIGURACIÓN DE CORS
# =============================================================================
# Orígenes permitidos para CORS (separados por coma)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8000

# =============================================================================
# CONFIGURACIÓN DE REDIS (para Celery)
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PORT=6380

# =============================================================================
# CONFIGURACIÓN DE CELERY
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# CONFIGURACIÓN DE ARCHIVOS
# =============================================================================
# Directorio para archivos subidos
UPLOAD_DIR=./uploads

# Tamaño máximo de archivo (en bytes) - 50MB por defecto
MAX_FILE_SIZE=52428800

# =============================================================================
# CONFIGURACIÓN DE EMAIL (opcional para verificación de usuarios)
# =============================================================================
MAIL_USERNAME=tu_email@ejemplo.com
MAIL_PASSWORD=tu_password_de_email
MAIL_FROM=noreply@epidemiologia.gob.ar
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com
MAIL_FROM_NAME="Sistema de Epidemiología"

# =============================================================================
# CONFIGURACIÓN DE LOGGING
# =============================================================================
LOG_LEVEL=INFO

# =============================================================================
# CONFIGURACIÓN ESPECÍFICA DE EPIDEMIOLOGÍA
# =============================================================================
# Configuraciones específicas del dominio
DEFAULT_TIMEZONE=America/Argentina/Buenos_Aires
PAGINATION_PAGE_SIZE=50
PAGINATION_MAX_PAGE_SIZE=200

# =============================================================================
# CONFIGURACIÓN DE GEOCODIFICACIÓN
# =============================================================================
# Habilitar/deshabilitar geocodificación de domicilios
ENABLE_GEOCODING=false

# Mapbox API (https://account.mapbox.com/)
# Obtén tu token en: https://account.mapbox.com/access-tokens/
MAPBOX_ACCESS_TOKEN=pk.tu_token_de_mapbox_aqui

# Configuración de geocodificación
GEOCODING_PROVIDER=mapbox
GEOCODING_RATE_LIMIT=600
GEOCODING_TIMEOUT=5

# =============================================================================
# CONFIGURACIÓN DE DESARROLLO
# =============================================================================
# Solo para desarrollo - NO usar en producción
ENABLE_DOCS=true
ENABLE_REDOC=true
ENABLE_OPENAPI=true

# =============================================================================
# CONFIGURACIÓN DE MONITOREO (opcional)
# =============================================================================
# Para integración con servicios de monitoreo
# SENTRY_DSN=https://tu_sentry_dsn_aqui
# PROMETHEUS_METRICS=true

# =============================================================================
# CONFIGURACIÓN DE DOCKER
# =============================================================================
COMPOSE_PROJECT_NAME=epi
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1
API_PORT=8000